<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sell_Waste_for_recycling">

    <TextView
        android:id="@+id/totalPay3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_semi_bold"
        android:paddingTop="20sp"
        android:text="Total Price you can  sell it"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scv" />

    <TextView
        android:id="@+id/tx4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_semi_bold"

        android:paddingTop="20sp"
        android:text="Sell waste for Recycling"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="20sp"
        android:paddingTop="40sp"
        android:paddingRight="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="select type of waste" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="40sp">

                <RadioButton
                    android:id="@+id/organic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Organic waste" />


                    <RadioButton
                        android:id="@+id/recyclable_plastic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recyclable plastic" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/other"
                        android:text="Other recyclable material"/>

            </RadioGroup>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="select amount " />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="40sp">

                <RadioButton
                    android:id="@+id/above_20kg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="above 20 Kg" />


                <RadioButton
                    android:id="@+id/above_40"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Above 40" />

                <RadioButton
                    android:id="@+id/above_80"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Above 80" />
            </RadioGroup>
        </LinearLayout>

    </ScrollView>

    <EditText
        android:id="@+id/editTextNumberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_search"
        android:ems="10"
        android:hint="200 birr"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalPay3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="294dp"
        android:layout_height="55dp"
        android:layout_marginTop="156dp"
        android:text="Submit"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal" />

</androidx.constraintlayout.widget.ConstraintLayout>
